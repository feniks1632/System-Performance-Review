@model List<PerformanceReviewWeb.Models.ReviewResponse>
@{
    ViewData["Title"] = "Оценки, ожидающие завершения";
    var user = ViewBag.User as PerformanceReviewWeb.Models.UserResponse;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-tasks me-2"></i>Оценки, ожидающие завершения</h1>
        <span class="badge bg-primary fs-6">@Model.Count оценок</span>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Тип оценки</th>
                                <th>ID цели</th>
                                <th>Автор оценки</th>
                                <th>Дата создания</th>
                                <th>Текущий балл</th>
                                <th>Статус</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                                <tr>
                                    <td>
                                        @switch (review.ReviewType)
                                        {
                                            case PerformanceReviewWeb.Models.ReviewType.Self:
                                                <span class="badge bg-info">Самооценка</span>
                                                break;
                                            case PerformanceReviewWeb.Models.ReviewType.Manager:
                                                <span class="badge bg-primary">Оценка руководителя</span>
                                                break;
                                            case PerformanceReviewWeb.Models.ReviewType.Potential:
                                                <span class="badge bg-warning text-dark">Оценка потенциала</span>
                                                break;
                                            case PerformanceReviewWeb.Models.ReviewType.Respondent:
                                                <span class="badge bg-secondary">Оценка респондента</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <code>@review.GoalId</code>
                                    </td>
                                    <td>@review.ReviewerId</td>
                                    <td>@review.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (review.CalculatedScore.HasValue)
                                        {
                                            <span class="badge bg-success">@review.CalculatedScore.Value.ToString("F1")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">не рассчитан</span>
                                        }
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(review.FinalRating))
                                        {
                                            <span class="badge bg-warning text-dark">ожидает завершения</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@review.FinalRating</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/reviews/complete-manager/@review.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit me-1"></i>Завершить
                                        </a>
                                        <a href="/reviews/@review.Id" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye me-1"></i>Детали
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h3>Нет оценок для завершения</h3>
                <p class="text-muted">Все оценки уже завершены или нет оценок, требующих вашего внимания.</p>
            </div>
        </div>
    }
</div>