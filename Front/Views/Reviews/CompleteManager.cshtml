@using PerformanceReviewWeb.Models
@model ManagerScoringViewModel
@{
    ViewData["Title"] = "Завершение оценки";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-check-circle me-2"></i>Завершение оценки
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Информация об оценке -->
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>Информация об оценке</h6>
                        <p class="mb-1"><strong>ID оценки:</strong> @Model.ReviewId</p>
                        <p class="mb-1"><strong>Тип оценки:</strong> @Model.Review?.ReviewType</p>
                        <p class="mb-0"><strong>Рассчитанный балл:</strong> @(Model.Review?.CalculatedScore?.ToString("F1") ?? "Не рассчитан")</p>
                    </div>

                    <form method="post" action="/reviews/complete-manager/@Model.ReviewId" id="completeReviewForm">
                        @Html.AntiForgeryToken()
                        
                        <!-- Оценка вопросов руководителем -->
                        @if (Model.PendingQuestions.Any())
                        {
                            <div class="card mb-4">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-user-tie me-2"></i>Оценка вопросов руководителем
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @for (int i = 0; i < Model.PendingQuestions.Count; i++)
                                    {
                                        var question = Model.PendingQuestions[i];
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <input type="hidden" name="ManagerScores[@i].QuestionId" value="@question.QuestionId" />
                                                
                                                <h6 class="card-title">@question.QuestionText</h6>
                                                
                                                @if (!string.IsNullOrEmpty(question.Answer))
                                                {
                                                    <div class="alert alert-light mb-3">
                                                        <strong>Ответ сотрудника:</strong>
                                                        <p class="mb-0">@question.Answer</p>
                                                    </div>
                                                }
                                                
                                                @if (question.CurrentScore.HasValue)
                                                {
                                                    <div class="mb-2">
                                                        <strong>Текущая оценка:</strong>
                                                        <span class="badge bg-info">@question.CurrentScore.Value.ToString("F1")</span>
                                                    </div>
                                                }
                                                
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <label class="form-label">Оценка руководителя (1-@question.MaxScore):</label>
                                                        <select name="ManagerScores[@i].Score" class="form-select" required>
                                                            <option value="">Выберите оценку</option>
                                                            @for (int score = 1; score <= question.MaxScore; score++)
                                                            {
                                                                <option value="@score">@score</option>
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label class="form-label">Комментарий (необязательно):</label>
                                                        <textarea name="ManagerScores[@i].Answer" class="form-control" rows="2" 
                                                                  placeholder="Дополнительный комментарий..."></textarea>
                                                    </div>
                                                </div>
                                                
                                                <div class="mt-2 text-muted small">
                                                    <span>Вес вопроса: @question.Weight</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Итоговое решение -->
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-flag me-2"></i>Итоговое решение
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Итоговый рейтинг *</label>
                                            <select name="FinalReview.FinalRating" class="form-select" required>
                                                <option value="">Выберите рейтинг</option>
                                                <option value="excellent">Отлично</option>
                                                <option value="good">Хорошо</option>
                                                <option value="satisfactory">Удовлетворительно</option>
                                                <option value="poor">Плохо</option>
                                                <option value="unsatisfactory">Неудовлетворительно</option>
                                            </select>
                                            <small class="text-muted">Общий рейтинг по результатам оценки</small>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label">Итоговая обратная связь *</label>
                                    <textarea name="FinalReview.FinalFeedback" class="form-control" rows="5" 
                                              placeholder="Опишите итоговую обратную связь для сотрудника..." required></textarea>
                                    <small class="text-muted">Эта обратная связь будет видна сотруднику</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/reviews/pending-manager" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Назад к списку
                            </a>
                            <button type="submit" class="btn btn-success" id="submitCompleteBtn">
                                <i class="fas fa-check-circle me-2"></i>Завершить оценку
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('completeReviewForm');
            
            form.addEventListener('submit', function(e) {
                const submitBtn = document.getElementById('submitCompleteBtn');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Завершение...';
                submitBtn.disabled = true;
            });
        });
    </script>
}