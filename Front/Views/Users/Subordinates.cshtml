@model List<PerformanceReviewWeb.Models.UserResponse>
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Мои подчиненные";
    var currentUser = ViewBag.User as PerformanceReviewWeb.Models.UserResponse;
    var tokenSet = Antiforgery.GetAndStoreTokens(Context);
    var requestToken = tokenSet.RequestToken;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Мои подчиненные
                    </h5>
                    <span class="badge bg-primary">@Model.Count подчиненных</span>
                </div>
                <div class="card-body">
                    <!-- Форма для добавления нового подчиненного -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-user-plus me-2"></i>Добавить подчиненного
                            </h6>
                        </div>
                        <div class="card-body">
                            <form id="addSubordinateForm">
                                @Html.AntiForgeryToken()
                                <div class="row g-3 align-items-end">
                                    <div class="col-md-8">
                                        <label for="userIdInput" class="form-label">ID пользователя</label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="userIdInput" 
                                               placeholder="Введите ID пользователя"
                                               required>
                                        <div class="form-text">Введите ID пользователя, которому хотите назначить себя руководителем</div>
                                        <div id="userInfo" class="mt-2" style="display: none;">
                                            <!-- Здесь будет отображаться информация о пользователе -->
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="button" 
                                                class="btn btn-outline-primary w-100" 
                                                id="checkUserBtn">
                                            <i class="fas fa-search me-2"></i>Найти
                                        </button>
                                        <button type="submit" 
                                                class="btn btn-success w-100 mt-2" 
                                                id="assignManagerBtn" 
                                                style="display: none;">
                                            <i class="fas fa-user-tie me-2"></i>Назначить меня
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ФИО</th>
                                        <th>Email</th>
                                        <th>Статус</th>
                                        <th>Руководитель</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var subordinate in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-circle text-muted me-2"></i>
                                                    <div>
                                                        <strong>@subordinate.FullName</strong>
                                                        <br>
                                                        <small class="text-muted">ID: @subordinate.Id</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="mailto:@subordinate.Email" class="text-decoration-none">
                                                    @subordinate.Email
                                                </a>
                                            </td>
                                            <td>
                                                @if (subordinate.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle me-1"></i>Активен
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times-circle me-1"></i>Неактивен
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(subordinate.ManagerId))
                                                {
                                                    if (subordinate.ManagerId == currentUser?.Id)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-user-tie me-1"></i>Вы
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-user-shield me-1"></i>Другой руководитель
                                                        </span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-user-clock me-1"></i>Не назначен
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("ProfileById", "Users", new { id = subordinate.Id })" 
                                                       class="btn btn-outline-primary" title="Просмотреть профиль">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    
                                                    @if (string.IsNullOrEmpty(subordinate.ManagerId) || subordinate.ManagerId != currentUser?.Id)
                                                    {
                                                        <button class="btn btn-outline-success assign-existing-btn" 
                                                                data-user-id="@subordinate.Id" 
                                                                data-user-name="@subordinate.FullName"
                                                                title="Назначить меня руководителем">
                                                            <i class="fas fa-user-tie"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-outline-danger remove-manager-btn" 
                                                                data-user-id="@subordinate.Id" 
                                                                data-user-name="@subordinate.FullName"
                                                                title="Убрать меня как руководителя">
                                                            <i class="fas fa-user-times"></i>
                                                        </button>
                                                    }
                                                    
                                                    <a href="@Url.Action("Index", "Goals", new { employeeId = subordinate.Id })" 
                                                       class="btn btn-outline-info" title="Просмотреть цели">
                                                        <i class="fas fa-bullseye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">У вас пока нет подчиненных</h5>
                            <p class="text-muted mb-4">Назначьте себя руководителем для сотрудников, чтобы они появились в этом списке</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно подтверждения -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Назначение руководителя</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="modalMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" id="confirmAction">Подтвердить</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentAction = '';
        let currentUserId = '';
        let currentUserName = '';

        document.addEventListener('DOMContentLoaded', function() {
            const userIdInput = document.getElementById('userIdInput');
            const checkUserBtn = document.getElementById('checkUserBtn');
            const assignManagerBtn = document.getElementById('assignManagerBtn');
            const userInfo = document.getElementById('userInfo');
            const addSubordinateForm = document.getElementById('addSubordinateForm');

            // Обработчик отправки формы
            addSubordinateForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                if (!currentUserId) {
                    showAlert('error', 'Сначала найдите пользователя');
                    return;
                }
                
                document.getElementById('modalTitle').textContent = 'Назначение руководителя';
                document.getElementById('modalMessage').textContent = 
                    `Вы уверены, что хотите назначить себя руководителем для пользователя "${currentUserName}"?`;
                
                const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                modal.show();
                
                currentAction = 'assign';
            });

            // Поиск пользователя
            checkUserBtn.addEventListener('click', function() {
                const userId = userIdInput.value.trim();
                if (!userId) {
                    showAlert('error', 'Введите ID пользователя');
                    return;
                }

                checkUserBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Поиск...';
                checkUserBtn.disabled = true;

                fetch('/users/check-user', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({ userId: userId })
                })
                .then(response => response.json())
                .then(data => {
                    checkUserBtn.innerHTML = '<i class="fas fa-search me-2"></i>Найти';
                    checkUserBtn.disabled = false;

                    if (data.success) {
                        userInfo.innerHTML = `
                            <div class="alert alert-success">
                                <strong>Найден пользователь:</strong><br>
                                <strong>${data.user.fullName}</strong><br>
                                Email: ${data.user.email}<br>
                                Роль: ${data.user.isManager ? 'Руководитель' : 'Сотрудник'}<br>
                                Статус: ${data.user.isActive ? 'Активен' : 'Неактивен'}
                            </div>
                        `;
                        userInfo.style.display = 'block';
                        assignManagerBtn.style.display = 'block';
                        currentUserId = userId;
                        currentUserName = data.user.fullName;
                    } else {
                        userInfo.innerHTML = `<div class="alert alert-danger">${data.message}</div>`;
                        userInfo.style.display = 'block';
                        assignManagerBtn.style.display = 'none';
                        currentUserId = '';
                        currentUserName = '';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    checkUserBtn.innerHTML = '<i class="fas fa-search me-2"></i>Найти';
                    checkUserBtn.disabled = false;
                    showAlert('error', 'Ошибка при поиске пользователя');
                });
            });

            // Назначение руководителя для найденного пользователя
            assignManagerBtn.addEventListener('click', function() {
                if (!currentUserId) return;
                
                document.getElementById('modalTitle').textContent = 'Назначение руководителя';
                document.getElementById('modalMessage').textContent = 
                    `Вы уверены, что хотите назначить себя руководителем для пользователя "${currentUserName}"?`;
                
                const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                modal.show();
            });

            // Назначение руководителя существующим подчиненным
            document.querySelectorAll('.assign-existing-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    currentAction = 'assign';
                    currentUserId = this.getAttribute('data-user-id');
                    currentUserName = this.getAttribute('data-user-name');
                    
                    document.getElementById('modalTitle').textContent = 'Назначение руководителя';
                    document.getElementById('modalMessage').textContent = 
                        `Вы уверены, что хотите назначить себя руководителем для пользователя "${currentUserName}"?`;
                    
                    const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                    modal.show();
                });
            });

            // Удаление руководителя
            document.querySelectorAll('.remove-manager-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    currentAction = 'remove';
                    currentUserId = this.getAttribute('data-user-id');
                    currentUserName = this.getAttribute('data-user-name');
                    
                    document.getElementById('modalTitle').textContent = 'Удаление руководителя';
                    document.getElementById('modalMessage').textContent = 
                        `Вы уверены, что хотите перестать быть руководителем для пользователя "${currentUserName}"?`;
                    
                    const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                    modal.show();
                });
            });

            // Подтверждение действия
            document.getElementById('confirmAction').addEventListener('click', function() {
                const confirmBtn = this;
                const originalText = confirmBtn.innerHTML;
                
                confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Обработка...';
                confirmBtn.disabled = true;
                
                if (currentAction === 'assign') {
                    assignManager(currentUserId, confirmBtn, originalText);
                } else if (currentAction === 'remove') {
                    removeManager(currentUserId, confirmBtn, originalText);
                }
            });
        });

        function assignManager(userId, button, originalText) {
    // Получаем ID текущего пользователя (руководителя) из ViewBag
    const managerId = '@currentUser?.Id';
    
    if (!managerId) {
        showToast('Ошибка', 'Не удалось определить ID руководителя. Пожалуйста, перезагрузите страницу.', 'error');
        resetButton(button, originalText);
        return;
    }

    fetch('/users/assign-manager', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
        },
        body: JSON.stringify({ 
            userId: userId,
            managerId: managerId
        })
    })
    .then(response => response.json())
    .then(data => {
        resetButton(button, originalText);
        const modal = bootstrap.Modal.getInstance(document.getElementById('confirmModal'));
        modal.hide();
        
        if (data.success) {
            showToast('Успех', data.message, 'success');
            // Очищаем форму добавления
            document.getElementById('userIdInput').value = '';
            document.getElementById('userInfo').style.display = 'none';
            document.getElementById('assignManagerBtn').style.display = 'none';
            currentUserId = '';
            currentUserName = '';
            
            setTimeout(() => location.reload(), 1500);
        } else {
            showToast('Ошибка', data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        resetButton(button, originalText);
        showToast('Ошибка', 'Произошла ошибка при выполнении запроса', 'error');
    });
}

        function removeManager(userId, button, originalText) {
            // Получаем ID текущего пользователя (руководителя)
            const currentUser = @Json.Serialize(ViewBag.User);
            const managerId = currentUser?.Id;
            
            if (!managerId) {
                showToast('Ошибка', 'Не удалось определить ID руководителя', 'error');
                resetButton(button, originalText);
                return;
            }

            fetch('/users/remove-manager', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ 
                    userId: userId,
                    managerId: managerId
                })
            })
            .then(response => response.json())
            .then(data => {
                resetButton(button, originalText);
                const modal = bootstrap.Modal.getInstance(document.getElementById('confirmModal'));
                modal.hide();
                
                if (data.success) {
                    showToast('Успех', data.message, 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('Ошибка', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                resetButton(button, originalText);
                showToast('Ошибка', 'Произошла ошибка при выполнении запроса', 'error');
            });
        }

        function resetButton(button, originalText) {
            button.innerHTML = originalText;
            button.disabled = false;
        }

        function showAlert(type, message) {
            const alertClass = type === 'error' ? 'alert-danger' : 'alert-success';
            const alertHtml = `<div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>`;
            
            document.querySelector('.container').prepend(alertHtml);
            
            // Автоматически скрыть через 5 секунд
            setTimeout(() => {
                const alert = document.querySelector('.alert');
                if (alert) {
                    alert.remove();
                }
            }, 5000);
        }

        function showToast(title, message, type) {
            if (typeof showToastNotification === 'function') {
                showToastNotification(title, message, type);
            } else {
                const toast = document.createElement('div');
                toast.className = `alert alert-${type === 'error' ? 'danger' : 'success'} alert-dismissible fade show`;
                toast.innerHTML = `
                    <strong>${title}</strong> ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.querySelector('.container').prepend(toast);
                
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.remove();
                    }
                }, 5000);
            }
        }
    </script>
}