@using PerformanceReviewWeb.Models
@model List<UserResponse>
@{
    ViewData["Title"] = "Руководители";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-tie"></i> Список руководителей
                    </h5>
                    <span class="badge bg-primary">@Model.Count руководителей</span>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ФИО</th>
                                        <th>Email</th>
                                        <th>Статус</th>
                                        <th>Дата регистрации</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var manager in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@manager.FullName</strong>
                                                <br>
                                                <small class="text-muted">ID: @manager.Id</small>
                                            </td>
                                            <td>@manager.Email</td>
                                            <td>
                                                @if (manager.IsActive)
                                                {
                                                    <span class="badge bg-success">Активен</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Неактивен</span>
                                                }
                                            </td>
                                            <td>@manager.CreatedAt.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("ProfileById", "Users", new { id = manager.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Профиль
                                                </a>
                                                <a href="@Url.Action("Details", "Users", new { id = manager.Id })" 
                                                   class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-info-circle"></i> Детали
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Нет доступных руководителей.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>