@using PerformanceReviewWeb.Models
@model QuestionTemplateCreateModel
@{
    ViewData["Title"] = "Создание шаблона вопроса";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Создание шаблона вопроса
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="QuestionText"></label>
                                    <textarea asp-for="QuestionText" class="form-control" rows="3" 
                                              placeholder="Введите текст вопроса..."></textarea>
                                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" asp-for="QuestionType"></label>
                                    <select asp-for="QuestionType" class="form-select">
                                        <option value="">Выберите тип вопроса</option>
                                        <option value="self">Самооценка</option>
                                        <option value="manager">Оценка руководителя</option>
                                        <option value="potential">Оценка потенциала</option>
                                        <option value="respondent">Оценка респондента</option>
                                    </select>
                                    <span asp-validation-for="QuestionType" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" asp-for="Section"></label>
                                    <input asp-for="Section" class="form-control" 
                                           placeholder="Например: Компетенции, Навыки...">
                                    <span asp-validation-for="Section" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" asp-for="Weight"></label>
                                    <input asp-for="Weight" class="form-control" type="number" step="0.1" min="0.1" max="10.0">
                                    <span asp-validation-for="Weight" class="text-danger"></span>
                                    <small class="text-muted">Вес вопроса в общей оценке (от 0.1 до 10.0)</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="MaxScore"></label>
                                    <input asp-for="MaxScore" class="form-control" type="number" min="1" max="100">
                                    <span asp-validation-for="MaxScore" class="text-danger"></span>
                                    <small class="text-muted">Максимальный балл за вопрос</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" asp-for="OrderIndex"></label>
                                    <input asp-for="OrderIndex" class="form-control" type="number" min="0">
                                    <span asp-validation-for="OrderIndex" class="text-danger"></span>
                                    <small class="text-muted">Порядковый номер в списке вопросов</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" asp-for="TriggerWords"></label>
                                    <input asp-for="TriggerWords" class="form-control" 
                                           placeholder="слово1, слово2, слово3...">
                                    <span asp-validation-for="TriggerWords" class="text-danger"></span>
                                    <small class="text-muted">Триггерные слова для анализа ответов (через запятую)</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" asp-for="OptionsJson"></label>
                                    <textarea asp-for="OptionsJson" class="form-control" rows="4" 
                                              placeholder='[{"id": "1", "text": "Вариант 1", "value": 1}, {"id": "2", "text": "Вариант 2", "value": 2}]'></textarea>
                                    <span asp-validation-for="OptionsJson" class="text-danger"></span>
                                    <small class="text-muted">JSON массив опций для вопросов с выбором</small>
                                </div>

                                <div class="mb-3 form-check">
                                    <input asp-for="RequiresManagerScoring" class="form-check-input">
                                    <label class="form-check-label" asp-for="RequiresManagerScoring"></label>
                                    <small class="text-muted d-block">Если включено, вопрос потребует дополнительной оценки руководителя</small>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Информация</h6>
                            <ul class="mb-0">
                                <li><strong>Тип вопроса:</strong> определяет контекст использования (самооценка, оценка руководителя и т.д.)</li>
                                <li><strong>Вес вопроса:</strong> влияет на значимость вопроса в общей оценке</li>
                                <li><strong>Опции JSON:</strong> используйте для вопросов с выбором из вариантов</li>
                                <li><strong>Триггерные слова:</strong> помогают анализировать текстовые ответы</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/question-templates" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Назад к списку
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Создать шаблон
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Пример валидного JSON для опций
            const exampleOptions = [
                {
                    "id": "1",
                    "text": "Полностью не согласен",
                    "value": 1
                },
                {
                    "id": "2", 
                    "text": "Частично не согласен",
                    "value": 2
                },
                {
                    "id": "3",
                    "text": "Нейтрален",
                    "value": 3
                },
                {
                    "id": "4",
                    "text": "Частично согласен", 
                    "value": 4
                },
                {
                    "id": "5",
                    "text": "Полностью согласен",
                    "value": 5
                }
            ];

            // Кнопка для вставки примера JSON
            const optionsTextarea = document.getElementById('OptionsJson');
            const exampleButton = document.createElement('button');
            exampleButton.type = 'button';
            exampleButton.className = 'btn btn-sm btn-outline-info mt-1';
            exampleButton.innerHTML = '<i class="fas fa-magic me-1"></i>Вставить пример опций';
            exampleButton.addEventListener('click', function() {
                optionsTextarea.value = JSON.stringify(exampleOptions, null, 2);
            });
            
            optionsTextarea.parentNode.appendChild(exampleButton);

            // Валидация JSON при вводе
            optionsTextarea.addEventListener('blur', function() {
                if (this.value.trim()) {
                    try {
                        JSON.parse(this.value);
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } catch (e) {
                        this.classList.remove('is-valid');
                        this.classList.add('is-invalid');
                    }
                }
            });
        });
    </script>
}