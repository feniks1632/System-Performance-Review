@model List<PerformanceReviewWeb.Models.GoalResponse>

@{
    ViewData["Title"] = "Цели для оценки";
    var user = ViewBag.User as PerformanceReviewWeb.Models.UserResponse;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Цели для оценки</h2>
            <p class="text-muted">Список целей, где вы назначены респондентом</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    У вас нет целей для оценки.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                @foreach (var goal in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 class="card-title">@goal.Title</h5>
                                    <p class="card-text">@goal.Description</p>
                                    <div class="text-muted small">
                                        <strong>Сотрудник:</strong> @goal.EmployeeName |
                                        <strong>Дедлайн:</strong> @goal.Deadline.ToString("dd.MM.yyyy") |
                                        <strong>Статус:</strong> 
                                        <span class="badge @(goal.Status == "active" ? "bg-success" : "bg-secondary")">
                                            @goal.Status
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="btn-group-vertical">
                                        <a href="@Url.Action("RespondentGoalDetails", "Goals", new { goalId = goal.Id })" 
                                           class="btn btn-outline-primary btn-sm">
                                            Подробнее
                                        </a>
                                        <a href="@Url.Action("Create", "Reviews", new { goalId = goal.Id, reviewType = "Respondent" })" 
                                           class="btn btn-primary btn-sm mt-1">
                                            Создать оценку
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>