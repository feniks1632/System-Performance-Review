@using PerformanceReviewWeb.Models
@model RespondentReviewResponse
@{
    ViewData["Title"] = "Детали оценки респондента";
    var user = ViewBag.User as PerformanceReviewWeb.Models.UserResponse;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("RespondentGoals", "Goals")">Мои цели для оценки</a></li>
                    <li class="breadcrumb-item active">Детали оценки</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-eye me-2"></i>Детали оценки респондента
                        </h4>
                        <span class="badge bg-light text-dark">
                            @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Информация об оценке -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-user me-2"></i>Информация о респонденте</h6>
                                    <p class="mb-1"><strong>Имя:</strong> @(Model.RespondentName ?? "Не указано")</p>
                                    <p class="mb-0"><strong>ID респондента:</strong> @Model.RespondentId</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-bullseye me-2"></i>Информация о цели</h6>
                                    <p class="mb-1"><strong>ID цели:</strong> @Model.GoalId</p>
                                    <p class="mb-0"><strong>Дата создания:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Комментарии респондента -->
                    @if (!string.IsNullOrEmpty(Model.Comments))
                    {
                        <div class="card mb-4 border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h6 class="mb-0">
                                    <i class="fas fa-comment me-2"></i>Комментарии респондента
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-0" style="white-space: pre-line">@Model.Comments</p>
                            </div>
                        </div>
                    }

                    <!-- Ответы на вопросы -->
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-question-circle me-2"></i>Ответы на вопросы
                                <span class="badge bg-light text-dark ms-2">@Model.Answers.Count</span>
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.Answers.Any())
                            {
                                @for (int i = 0; i < Model.Answers.Count; i++)
                                {
                                    var answer = Model.Answers[i];
                                    <div class="card mb-3">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0">Вопрос @(i + 1)</h6>
                                            <small class="text-muted">ID: @answer.QuestionId</small>
                                        </div>
                                        <div class="card-body">
                                            @if (!string.IsNullOrEmpty(answer.Answer))
                                            {
                                                <div class="mb-3">
                                                    <strong class="text-primary">Текстовый ответ:</strong>
                                                    <p class="mt-1 mb-0 p-2 bg-light rounded" style="white-space: pre-line">@answer.Answer</p>
                                                </div>
                                            }
                                            
                                            @if (answer.Score.HasValue)
                                            {
                                                <div class="mb-3">
                                                    <strong class="text-success">Оценка:</strong>
                                                    <div class="mt-1">
                                                        <span class="badge bg-success fs-6">@answer.Score.Value.ToString("F1")</span>
                                                        <small class="text-muted ms-2">баллов</small>
                                                    </div>
                                                </div>
                                            }
                                            
                                            @if (!string.IsNullOrEmpty(answer.SelectedOption))
                                            {
                                                <div class="mb-3">
                                                    <strong class="text-info">Выбранная опция:</strong>
                                                    <div class="mt-1">
                                                        <span class="badge bg-info">@answer.SelectedOption</span>
                                                    </div>
                                                </div>
                                            }

                                            @if (string.IsNullOrEmpty(answer.Answer) && !answer.Score.HasValue && string.IsNullOrEmpty(answer.SelectedOption))
                                            {
                                                <div class="alert alert-warning mb-0">
                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                    На этот вопрос не был дан ответ
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <h5>Ответы отсутствуют</h5>
                                    <p class="text-muted">На вопросы не было дано ответов</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Кнопки действий -->
                    <div class="mt-4 d-flex gap-2">
                        <a href="@Url.Action("RespondentGoals", "Goals")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Назад к списку целей
                        </a>
                        <button onclick="window.print()" class="btn btn-outline-primary">
                            <i class="fas fa-print me-1"></i>Печать
                        </button>
                        @if (user?.IsManager == true)
                        {
                            <a href="@Url.Action("Details", "Goals", new { id = Model.GoalId })" class="btn btn-info">
                                <i class="fas fa-external-link-alt me-1"></i>К деталям цели
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .badge {
            font-size: 0.75em;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Добавляем плавную прокрутку к якорям
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
}